{% macro hb_side( stuff ) %}
	<div class="c h1 pli flex">
		{{ stuff | safe }}
	</div>
{% endmacro %}

<!-- -->

{% macro ht_list( stuff ) %}
	<div class="flex flex-col">
		<div class="h2 w100 c"></div>
		<div class="h3 w100 c"></div>
	</div>
{% endmacro %}

<!-- -->

{% macro hb_list( stuff ) %}
	<div class="c h3 flex">
		<div class="h3 w3 c">1</div>
		<div class="h3 w4 c">1</div>
		<div class="h3 w4 c">1</div>
		<div class="h3 w4 c">1</div>
		<div class="h3 w3 c">1</div>
	</div>
{% endmacro %}

<!-- -->

{% macro ht_body( stuff ) %}
	<div class="c h1 w100 pli flex">
		{{ stuff | safe }}
	</div>
{% endmacro %}

<!-- -->

{% macro hb_body( stuff ) %}
	<div class="c h3 flex ">
		<div class="h3 w5 c">1</div>
		<div class="h3 w4 c">1</div>
		<div class="h3 w3 c">1</div>
		<div class="h3 w4 c">1</div>
		<div class="h3 w4 c">1</div>
		<div class="h3 w5 c">1</div>
	</div>
{% endmacro %}

