<!-- macros -->

{% macro column_header(data) %}
	<div class="header flex flex-col c">
		<div class="h4 c">
			{{ data.tops | safe }}
		</div>
		<div class="h3 c">
			{{ data.bots | safe }}
		</div>
	</div>
{% endmacro %}

